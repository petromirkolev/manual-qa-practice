              "",
              "// Response body contains user object",
              "pm.test(\"Response body contains user object\", function () {",
              "    pm.response.to.have.jsonBody('id');",
              "    pm.response.to.have.jsonBody('firstName');",
              "    pm.response.to.have.jsonBody('lastName');",
              "    pm.response.to.have.jsonBody('email');",
              "    pm.response.to.have.jsonBody('phone');",
              "    pm.response.to.have.jsonBody('username');",
              "    pm.response.to.have.jsonBody('password');",
              "    pm.response.to.have.jsonBody('birthDate');",
              "    pm.response.to.have.jsonBody('image');",
              "    pm.response.to.have.jsonBody('bloodGroup');",
              "    pm.response.to.have.jsonBody('height');",
              "    pm.response.to.have.jsonBody('weight');",
              "    pm.response.to.have.jsonBody('eyeColor');",
              "    pm.response.to.have.jsonBody('hair.color');",
              "    pm.response.to.have.jsonBody('hair.type');",
              "    pm.response.to.have.jsonBody('address.country');",
              "    pm.response.to.have.jsonBody('company.address.country');",
              "    pm.response.to.have.jsonBody('crypto.coin');",
              "    pm.response.to.have.jsonBody('crypto.network');",
              "    pm.response.to.have.jsonBody('role');",
              "    pm.response.to.have.jsonBody('university');",
              "    pm.response.to.have.jsonBody('bank.cardNumber');",
              "    pm.response.to.have.jsonBody('bank.cardType');",
              "    pm.response.to.have.jsonBody('bank.currency');",
              "    pm.response.to.have.jsonBody('bank.iban');",
              "    pm.response.to.have.jsonBody('company.address.stateCode');",
              "});"
