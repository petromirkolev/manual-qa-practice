    {
      "name": "Get an ambiguous city name",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Response code is 200",
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "// Results length >= 2 (if such city is known to have multiple matches)",
              "pm.test(\"Number of results is at least 2\", function () {",
              "    pm.expect(pm.response.json().results.length).to.be.at.least(2);",
              "});",
              "",
              "// Each result has at least name, country, latitude, longitude",
              "pm.test(\"Each result has required fields\", function () {",
              "    pm.response.json().results.forEach(function (result) {",
              "        pm.expect(result).to.have.property(\"name\");",
              "        pm.expect(result).to.have.property(\"country\");",
              "        pm.expect(result).to.have.property(\"latitude\");",
              "        pm.expect(result).to.have.property(\"longitude\");",
              "    });",
              "});"
            ],
            "type": "text/javascript",
