  "item": [
    {
      "name": "Get a valid city",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Response code is 200",
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "// Body contains \"results\" array",
              "pm.test(\"Response body contains 'results' array\", function () { ",
              "    pm.expect(pm.response.json()).to.have.property('results');",
              "});",
              "",
              "// \"results\" array contains at least one element",
              "pm.test(\"Results array contains at least one element\", function () {",
              "    pm.expect(pm.response.json().results).to.have.lengthOf.at.least(1);",
              "});",
              "",
              "// First result nas name",
              "pm.test(\"First result has name 'Plovdiv'\", function () {",
              "    pm.expect(pm.response.json().results[0].name).to.eql(\"Plovdiv\");",
              "});",
              "",
              "// First result has latitude",
              "pm.test(\"First result has latitude\", function () {",
              "    pm.expect(pm.response.json().results[0].latitude).to.eql(42.15);",
              "});",
              "",
              "// First result has longitude",
              "pm.test(\"First result has longitude\", function () {",
              "    pm.expect(pm.response.json().results[0].longitude).to.eql(24.75);",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/v1/search?name=Plovdiv&count=1",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "v1",
            "search"
          ],
          "query": [
            {
              "key": "name",
              "value": "Plovdiv"
            },
            {
              "key": "count",
              "value": "1"
            }
          ]
        }
      },
      "response": []
    },
